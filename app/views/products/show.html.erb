<p id="notice"><%= notice %></p>
 <div class="container-fluid" style="margin-bottom: 50px;">
  <div class="row">
   <div class="col-sm-4" >
        <%= image_tag @product.image.url %>
       
    </div>
      
        
    <div class="col-sm-8" >
         <strong> <h3><%= @product.title %></h3></strong>
          <%= sanitize(@product.description) %>
          
             <strong> <span class="price">
              <% if @product.price == 0 %>
            Free </span>
            
              <% else %> 
              <%= number_to_currency(@product.price) %></span>
              <% end %></strong>
               <% if @product.price != 0 %>
              <%= button_to 'Add to Cart', line_items_path(product_id: @product), remote: true,:class => 'login' , :id => 'addcart'%>
              <% end %>
              <% if (@product.pdf.present?) %>
               <%= link_to "Download PDF", @product.pdf.url, :class => 'login' %>
                            
               <% end %></br></br>
 <%= link_to 'Back', store_index_path, :class => "login" %>
          </div>
        </div>
        
      </div>
   
</div>
