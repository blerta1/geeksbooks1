<h2>Your Cart</h2>
<table>
 <%= render(cart.line_items) %>
<tr class="total_line">
<td colspan="2">Total</td>
 <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
</tr>

<tr><td><%= button_to "Checkout", new_order_path, method: :get, :class => 'login' %></td>
 <td><%= button_to 'Empty cart', cart, method: :delete, :class => 'login',
data: { confirm: 'Are you sure?' } %></td></tr>
</table>